<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app_ms="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.softmed.htmr_facility.activities.MainActivity"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTMR"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:textSize="14sp"
                        android:id="@+id/app_name"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/colorPrimary"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="72dp"
                            android:layout_marginRight="72dp"
                            android:layout_marginTop="46dp"
                            android:paddingBottom="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/card_separator_third">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="32dp"
                                        android:layout_marginTop="16dp"
                                        android:textColor="@color/black"
                                        android:text="Fomu ya usajili mteja mpya"
                                        android:textSize="42sp"
                                        android:id="@+id/client_name"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/avenir_light"/>

                                    <TextView
                                        android:visibility="invisible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/client_name"
                                        android:layout_marginLeft="32dp"
                                        android:layout_marginTop="16dp"
                                        android:textSize="14sp"
                                        android:id="@+id/cbhs_number_title"
                                        android:fontFamily="@font/avenir_light"
                                        android:text="CBHS #"
                                        android:textColor="@color/card_title_text"/>

                                    <TextView
                                        android:visibility="invisible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_title_text"
                                        android:layout_below="@id/client_name"
                                        android:text="0001/0001/000001"
                                        android:textSize="14sp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="16dp"
                                        android:id="@+id/cbhs_number_value"
                                        android:layout_toRightOf="@+id/cbhs_number_title"
                                        android:fontFamily="@font/avenir_light"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="32dp"
                                    android:background="@color/card_separator_third">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"
                                        android:text="Taarifa za Awali"/>


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/card_separator_third"
                                    android:paddingLeft="32dp"
                                    android:paddingRight="32dp"
                                    android:paddingBottom="16dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:orientation="horizontal">

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Jina"
                                            android:id="@+id/fname_et"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginBottom="4dp"
                                            android:inputType="textCapWords"
                                            android:imeOptions="actionNext"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Jina la Pili"
                                            android:id="@+id/mname_et"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginBottom="4dp"
                                            android:inputType="textCapWords"
                                            android:imeOptions="actionNext"
                                            app:et_dividerHeight="1dp"
                                            app:et_supportTextSize="20sp"
                                            app:et_supportTextColor="@color/black"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Ukoo"
                                            android:id="@+id/surname_et"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:inputType="textCapWords"
                                            android:imeOptions="actionDone"
                                            app:et_dividerHeight="1dp"
                                            app:et_supportTextSize="20sp"
                                            app:et_supportTextColor="@color/black"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center_vertical">

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Namba ya CTC"
                                            android:id="@+id/patient_ctc_number"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="4dp"
                                            android:inputType="numberDecimal"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="CBHS"
                                            android:id="@+id/cbhs_number"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:inputType="numberDecimal"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Simu"
                                            android:id="@+id/phone_number"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:drawableRight="@mipmap/ic_phone"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_marginBottom="4dp"
                                            android:inputType="phone"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center_vertical">

                                        <fr.ganfra.materialspinner.MaterialSpinner
                                            android:id="@+id/spin_gender"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="8dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:divider="@null"
                                            android:textSize="14sp"
                                            app_ms:ms_hintTextSize="14sp"
                                            app_ms:ms_alwaysShowFloatingLabel="true"
                                            app_ms:ms_multiline="false"
                                            app_ms:ms_hint="Jinsi"
                                            app_ms:ms_enableFloatingLabel="true"
                                            app_ms:ms_enableErrorLabel="false"
                                            app_ms:ms_floatingLabelText="Jinsi"
                                            app_ms:ms_baseColor="@color/card_grid_tex"
                                            app_ms:ms_highlightColor="@color/card_grid_text"
                                            app_ms:ms_errorColor="@color/red_500"
                                            app_ms:ms_hintColor="#b3b3b3"
                                            app_ms:ms_arrowColor="@color/black"
                                            app_ms:ms_arrowSize="12dp"
                                            app_ms:ms_alignLabels="false"
                                            app_ms:ms_floatingLabelColor="@color/white"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Tarehe ya Kuzaliwa"
                                            android:id="@+id/date_of_birth"
                                            android:textColor="@color/card_separator"
                                            android:textColorHint="@color/card_grid_tex"
                                            android:textSize="14sp"
                                            android:layout_gravity="bottom"
                                            android:fontFamily="@font/roboto_bold"
                                            android:drawableRight="@mipmap/ic_date"
                                            android:paddingLeft="8dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="4dp"/>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:id="@+id/pregnant_wrap"
                                            android:layout_marginLeft="8dp"
                                            android:layout_gravity="bottom"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/blood_cough_title"
                                                android:layout_below="@id/flags_title"
                                                android:layout_centerVertical="true"
                                                android:text="Mjamzito"
                                                android:enabled="false"
                                                android:layout_marginLeft="8dp"
                                                android:textSize="14sp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:textColor="@color/card_separator"/>

                                            <CheckBox
                                                android:id="@+id/is_pregnant"
                                                android:layout_width="35dp"
                                                android:layout_height="35dp"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="16dp"
                                                android:layout_marginRight="16dp"
                                                android:background="@drawable/checkbox"
                                                android:checked="false"
                                                android:layout_alignParentRight="true"
                                                />

                                        </RelativeLayout>

                                        <com.rey.material.widget.EditText
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="Uzito"
                                            android:id="@+id/weight"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginBottom="4dp"
                                            android:inputType="numberDecimal"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/cyan_100"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@color/white"
                                    android:layout_marginLeft="32dp"
                                    android:paddingTop="16dp">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_marginRight="16dp"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Taarifa za Msaidizi"
                                            android:id="@+id/msaidizi_title"
                                            android:textColor="@color/card_title_text"
                                            android:textSize="14sp"
                                            android:fontFamily="@font/roboto_condensed"/>

                                        <com.rey.material.widget.EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Jina La Msaidizi"
                                            android:id="@+id/care_taker_name"
                                            android:layout_below="@id/msaidizi_title"
                                            android:layout_marginTop="8dp"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="8dp"
                                            android:inputType="textCapWords"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:layout_marginTop="8dp"
                                            android:layout_below="@id/care_taker_name">

                                            <com.rey.material.widget.EditText
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Namba ya Simu"
                                                android:id="@+id/care_taker_phone"
                                                android:textColor="@color/card_title_text"
                                                android:textColorHint="@color/card_separator"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:layout_marginLeft="4dp"
                                                android:layout_marginRight="8dp"
                                                android:inputType="phone"
                                                app:et_dividerHeight="1dp"
                                                app:et_dividerColor="@color/card_grid_text"
                                                app:et_labelEnable="true"
                                                app:et_labelTextColor="@color/card_grid_text" />

                                            <com.rey.material.widget.EditText
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Mahusiano"
                                                android:id="@+id/care_taker_relationship"
                                                android:textColor="@color/card_title_text"
                                                android:textColorHint="@color/card_separator"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:layout_marginLeft="4dp"
                                                android:layout_marginRight="8dp"
                                                android:inputType="textCapWords"
                                                app:et_dividerHeight="1dp"
                                                app:et_dividerColor="@color/card_grid_text"
                                                app:et_labelEnable="true"
                                                app:et_labelTextColor="@color/card_grid_text" />

                                        </LinearLayout>


                                    </RelativeLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/card_separator"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:layout_marginRight="16dp"/>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="32dp"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/other_details_title"
                                            android:textSize="14sp"
                                            android:text="Taarifa Nyingine"
                                            android:fontFamily="@font/roboto_condensed"
                                            android:textColor="@color/card_title_text"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="bottom"
                                            android:id="@+id/location_wrap"
                                            android:layout_below="@id/other_details_title"
                                            android:layout_marginTop="8dp">

                                            <com.rey.material.widget.EditText
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Kata"
                                                android:id="@+id/ward"
                                                android:textColor="@color/card_title_text"
                                                android:textColorHint="@color/card_separator"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:layout_marginLeft="4dp"
                                                android:layout_marginRight="8dp"
                                                app:et_dividerHeight="1dp"
                                                app:et_dividerColor="@color/card_grid_text"
                                                app:et_labelEnable="true"
                                                app:et_labelTextColor="@color/card_grid_text" />


                                            <com.rey.material.widget.EditText
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Kijiji"
                                                android:id="@+id/village"
                                                android:textColor="@color/card_title_text"
                                                android:textColorHint="@color/card_separator"
                                                android:textSize="18sp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:layout_marginLeft="4dp"
                                                android:layout_marginRight="8dp"
                                                app:et_dividerHeight="1dp"
                                                app:et_dividerColor="@color/card_grid_text"
                                                app:et_labelEnable="true"
                                                app:et_labelTextColor="@color/card_grid_text" />

                                        </LinearLayout>

                                        <com.rey.material.widget.EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/location_wrap"
                                            android:layout_marginTop="8dp"
                                            android:hint="Anapokaa"
                                            android:id="@+id/hamlet"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="4dp"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />

                                        <com.rey.material.widget.EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Mwenyekiti wa mtaa"
                                            android:layout_below="@id/hamlet"
                                            android:layout_marginTop="8dp"
                                            android:id="@+id/mwenyekiti"
                                            android:textColor="@color/card_title_text"
                                            android:textColorHint="@color/card_separator"
                                            android:textSize="18sp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="8dp"
                                            android:inputType="textCapWords"
                                            app:et_dividerHeight="1dp"
                                            app:et_dividerColor="@color/card_grid_text"
                                            app:et_labelEnable="true"
                                            app:et_labelTextColor="@color/card_grid_text" />


                                    </RelativeLayout>


                                </LinearLayout>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginRight="32dp"
                                    android:background="@color/card_separator_third">

                                    <Button
                                        android:layout_width="150dp"
                                        android:layout_height="50dp"
                                        android:layout_alignParentRight="true"
                                        android:text="Hifadhi"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/save_button"
                                        android:textColor="@color/white"
                                        android:background="@drawable/border_three"
                                        android:fontFamily="@font/julius_sans_one" />

                                    <Button
                                        android:layout_width="150dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/cancel_button"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/border_one"
                                        android:layout_toLeftOf="@id/save_button"
                                        android:fontFamily="@font/julius_sans_one"
                                        android:layout_marginRight="16dp"
                                        android:textColor="@color/card_title_text"
                                        android:text="Sitisha"/>

                                    <com.rey.material.widget.ProgressView
                                        android:layout_width="150dp"
                                        android:layout_height="48dp"
                                        android:paddingLeft="75dp"
                                        android:paddingRight="75dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/save_progress"
                                        android:layout_toLeftOf="@id/referal_button"
                                        android:visibility="invisible"
                                        app:pv_autostart="true"
                                        app:pv_circular="true"
                                        app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
                                        app:pv_progressMode="indeterminate"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="32dp"/>

                    </LinearLayout>

                </ScrollView>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>